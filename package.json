{
  "name": "feap",
  "version": "0.1.0",
  "description": "FrontEnd Admin Panel on React, Redux, Bootstrap",
  "main": "index.js",
  "repository": "https://github.com/ZhukMax/feap.git",
  "author": "ZhukMax <zhukmax@ya.ru>",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "webpack --json --profile > stat.json",
    "devserver": "./node_modules/.bin/webpack-dev-server --inline --hot --colors",
    "prod": "better-npm-run deploy:prod"
  },
  "betterScripts": {
    "deploy:prod": {
      "command": "better-npm-run git:new:branch ; rm stat.json ; rm webpack.config.js ; rm .babelrc ; rm -rf ./public"
    },
    "git:new:branch": "NAME=date +prod_branch_%Y-%m-%d_%H-%M-%S ; git checkout -b $NAME"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "json-loader": "^0.5.4",
    "postcss-loader": "^1.2.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
